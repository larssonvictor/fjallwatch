<!DOCTYPE html>
<html>
  <head>
    <% include partial/head %>
  </head>
  <body>
    
    <!-- include header-->
    <% include partial/header %>

    <div class="container">
      <div class="row">
        <div class="col-md-8 col-xs-1">
          <div class="panel panel-default camera-panel">
            <div class="panel-heading">Webcamera</div>
            <div class="panel-body camera-panel-body">
              <img class="camera-img" src="">
              <a href="http://hzurl.se/kamera" class="btn btn-primary camera-btn">Webcamera</a>
            </div>
          </div>
        </div>
        <div class="col-md-4 col-xs-1">
          <div class="panel panel-default green-background house-temp-panel">
            <div class="panel-heading dark-green-background">Temperatur Inomhus</div>
            <div class="panel-body center">
              <p class="house-temp dyn-font-size">0°C</p>

              <div class="dark-green-background">
                <div class="center toTheLeft">
                  <p class="house-temp-min no-margin">Min: 20</p>
                </div>
                <div class="center toTheRight">
                  <p class="house-temp-max no-margin">Max: 30</p>
                </div>
              </div>
            </div>
          </div>

          <div class="panel panel-default blue-background outer-temp-panel">
            <div class="panel-heading dark-blue-background">Temperatur Utomhus</div>
            <div class="panel-body center">
              <p class="outer-temp dyn-font-size">0°C</p>
              
              <div class="dark-blue-background">
                <div class="center toTheLeft">
                  <p class="outer-temp-min no-margin">Min: 20</p>
                </div>
                <div class="center toTheRight">
                  <p class="outer-temp-max no-margin">Max: 30</p>
                </div>
              </div>
            </div>
          </div>

          <div class="panel panel-default yellow-background hot-tub-temp-panel">
            <div class="panel-heading dark-yellow-background">Temperatur Badtunna</div>
            <div class="panel-body center">
              <p class="hot-tub-temp dyn-font-size">0°C</p>
              
              <div class="dark-yellow-background">
                <div class="center toTheLeft">
                  <p class="hot-tub-temp-min no-margin">Min: 20</p>
                </div>
                <div class="center toTheRight">
                  <p class="hot-tub-temp-max no-margin">Max: 30</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-xs-1"></div>
        <div class="col-md-4 col-xs-1"></div>
        <div class="col-md-4 col-xs-1"></div>
      </div>
    </div>


    <script src="/lib/jQuery/jquery.min.js"></script>
    <script src="/lib/Bootstrap/js/bootstrap.js"></script>
    <script src="/javascripts/tableController.js"></script>

